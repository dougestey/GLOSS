<div class="Gloss">
  {{gloss-stats
    system=system
    loadUiElements=loadUiElements
    isConnected=isConnected
    }}

  <div class="ui grid">
    <div class="two column row no-gutter">
      <div class="column">
        {{#link-to 'navigate.index' class='Gloss-button Gloss-button--small'}}Local <span class="Gloss-button--detail">{{fleets.length}}</span>{{/link-to}}
      </div>

      <div class="column">
        {{#link-to 'navigate.tracker' class='Gloss-button Gloss-button--small'}}Tracker <span class="Gloss-button--detail">{{tracked.length}}</span>{{/link-to}}
      </div>

      {{!-- <div class="column">
        {{#link-to 'navigate.tracker' class='Gloss-button Gloss-button--small'}}Search{{/link-to}}
      </div> --}}
    </div>
  </div>

  <div class="Gloss-viewport">
    {{#unless (and loadNotifications fleets.length)}}
      <div class="ui active inverted text loader">Loading</div>
    {{/unless}}

    {{#liquid-if (and loadUiElements fleets.length) class="ui-fade-6"}}
        <div class="ui grid padded">
          <div class="row">
            {{outlet}}
          </div>
        </div>
    {{/liquid-if}}
  </div>
</div>

