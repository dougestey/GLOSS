{{#liquid-if isShowingMessage class="ui-fade"}}
  <div class="Gloss Gloss-module Gloss-module--y Gloss-flex--middle">
    <div class="Gloss-module">
      <div>
        {{#if title}}
          <h1 class="Gloss-logo">{{title}}</h1>
        {{/if}}

        {{#if (or header subheader)}}
          {{#if header}}
            <h2>{{header}}</h2>
          {{/if}}

          {{#if subheader}}
            <h3 class="{{if stopAnimating 'kill-animation'}}">{{subheader}}</h3>
          {{/if}}
        {{/if}}
      </div>
    </div>
  </div>
{{/liquid-if}}
