<div class="Gloss-notification--line">
  <span class="Gloss-notification--flex">
    <span>
      <strong>{{dominantFaction.name}}</strong>
      <br>
      <span class="Gloss-notification--subjectContext">
        Pilots <strong>{{model.characters.length}}</strong> / Kills <strong>{{model.kills.length}}</strong>
      </span>
    </span>

    <img src={{threatImageUrl}}>
  </span>
</div>

<div class="Gloss-notification--line">
  <span class="Gloss-notification--messageContext">
    Threat level
  </span>

  <span class="Gloss-notification--message">
    <strong>{{threat-level model.dangerRatio}}</strong>
  </span>
</div>

<div class="Gloss-notification--line">
  <span class="Gloss-notification--time">
    Last seen <strong>{{moment-from-now model.lastSeen interval=1000}}</strong>
  </span>
</div>
