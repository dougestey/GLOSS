<div class="Gloss-notification--line">
  <span class="Gloss-notification--flex">
    <img src="https://imageserver.eveonline.com/Type/{{dominantShipType.id}}_64.png" class="Gloss-notification--image" />

    <span>
      <strong>{{dominantFaction.name}} ({{fleet.characters.length}})</strong>
      <br>
      <span class="Gloss-notification--subjectContext">
        {{fleet.kills.firstObject.positionName}}
      </span>
      <span class="Gloss-notification--time">
        <span>Last seen {{moment-from-now fleet.lastSeen interval=5000}}</span>
      </span>
    </span>
  </span>
</div>
